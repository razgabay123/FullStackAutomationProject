# ============================================
# Test Automation Framework Configuration
# ============================================
# This file contains all configuration variables for the test automation framework.
# Copy this file to .env and fill in your actual values.
# 
# IMPORTANT: Never commit .env to git! Only commit .env.example
# ============================================

# ============================================
# General Configuration
# ============================================
# Default wait time in seconds for element visibility/existence
# Used across all test types (Web, Mobile, Desktop)
# Recommended: 2-5 seconds
WAIT_TIME=2

# ============================================
# Web Testing Configuration (Selenium)
# ============================================
# Browser to use for web tests
# Options: Chrome, Firefox, Edge
# Make sure the browser is installed on your system
BROWSER=Chrome

# Base URL for web application under test
# Example: https://atidcollege.co.il/workshops/avengers/exercise/
WEB_URL=https://your-web-app-url.com

# Path to CSV file containing login test data
# Relative to project root
# Example: ddt/hero_logins.csv
LOGIN_CSV=ddt/hero_logins.csv

# ============================================
# Playwright Web Testing Configuration
# ============================================
# Browser to use for Playwright tests
# Options: Chrome, Chromium, Firefox, Webkit
# Webkit is Safari engine (good for cross-browser testing)
PLAYWRIGHT_BROWSER=Webkit

# Base URL for Playwright tests
# Example: https://automationbookstore.dev
PLAYWRIGHT_URL=https://your-playwright-test-url.com

# Path to CSV file containing filter/search test data for Playwright
# Relative to project root
# Example: ddt/search_ddt.csv
FILTER_CSV=ddt/search_ddt.csv

# ============================================
# Mobile Testing Configuration
# ============================================
# Mobile device platform
# Options: Android, iOS
MOBILE_DEVICE=Android

# Device UDID (Unique Device Identifier)
# For Android:
#   - Find devices: Run 'adb devices' in terminal
#   - Emulator: Usually 'emulator-5554'
#   - Physical device: Use the UDID shown by 'adb devices'
# For iOS:
#   - Simulator: Check Xcode > Window > Devices and Simulators
#   - Physical device: Check Xcode > Window > Devices and Simulators
# Examples:
#   - Android emulator: emulator-5554
#   - Android physical: R58M123456789
#   - iOS simulator: iPhone-14-Pro
#   - iOS physical: 00008030-001A4D123456789A
UDID=your_device_udid_here

# Android App Package Name
# Found in: app/build.gradle (applicationId) or AndroidManifest.xml
# Example: com.shivgadhia.android.ukMortgageCalc
APP_PACKAGE=com.yourcompany.yourapp

# Android App Activity (Main Activity)
# Found in: AndroidManifest.xml (<activity android:name="...">)
# Can be relative (starts with .) or fully qualified
# Examples: .MainActivity, com.example.MainActivity
APP_ACTIVITY=.MainActivity

# iOS Bundle Identifier (only needed for iOS testing)
# Found in: Xcode project settings > General > Bundle Identifier
# Example: com.shivgadhia.ukMortgageCalc
BUNDLE_ID=com.yourcompany.yourapp

# Swipe gesture duration in milliseconds
# Controls how fast/slow swipe gestures are performed
# Range: 100-1000ms (lower = faster, higher = slower)
# Recommended: 200-500ms for most cases
SWIPE_DURATION=200

# Path to CSV file containing mortgage calculation test data
# Relative to project root
# Example: ddt/mortgage_calculations.csv
CALCULATIONS_CSV=ddt/mortgage_calculations.csv

# ============================================
# Appium Server Configuration
# ============================================
# Appium server hostname or IP address
# - 'localhost' or '127.0.0.1' for local Appium server
# - IP address (e.g., '192.168.1.100') for remote Appium server
# - Hostname for cloud services (e.g., 'hub.browserstack.com')
APPIUM_HOST=localhost

# Appium server port number
# Standard Appium port: 4723
# Change only if running Appium on a different port
# Check your Appium server startup logs for the port
APPIUM_PORT=4723

# Optional: Full Appium server URL
# Alternative to using APPIUM_HOST + APPIUM_PORT
# Uncomment this line and comment out APPIUM_HOST and APPIUM_PORT if preferred
# Examples:
#   - Local: http://localhost:4723/wd/hub
#   - Remote: http://192.168.1.100:4723/wd/hub
#   - Cloud: https://hub.browserstack.com/wd/hub
# APPIUM_SERVER=http://localhost:4723/wd/hub

# ============================================
# API Testing Configuration
# ============================================
# Base URL for API endpoints
# Example: https://reqres.in/api/
API_URL=https://your-api-url.com/api/

# API Key for authenticated requests
# Keep this secret! Never commit real API keys to git
# Example: reqres-free-v1
API_KEY=your_api_key_here

# Path to CSV file containing API test data (user IDs, etc.)
# Relative to project root
# Example: ddt/ids_ddt.csv
API_DDT_CSV=ddt/ids_ddt.csv

# ============================================
# Performance Testing Configuration
# ============================================
# Host URL for performance/load testing
# Usually same as API_URL but without /api/ path
# Example: https://reqres.in
PERFORMANCE_TEST_HOST=https://your-performance-test-host.com

# ============================================
# Desktop Application Testing Configuration
# ============================================
# Windows Application Name (for WinAppDriver)
# Format: PackageFamilyName!ApplicationID
# Find in: Windows Settings > Apps > [Your App] > Advanced Options
# Example: Microsoft.WindowsCalculator_8wekyb3d8bbwe!App
APPLICATION_NAME=YourApp.PackageFamilyName!YourApp.ApplicationID

# WinAppDriver service address
# Format: IP:PORT or hostname:PORT
# Default: 127.0.0.1:4723
# Make sure WinAppDriver is running on this address
WINAPPDRIVER_SERVICE=127.0.0.1:4723

# ============================================
# Electron Application Testing Configuration
# ============================================
# Path to Electron application executable
# Full absolute path to the .exe file
# Example Windows: C:/Users/username/AppData/Local/Programs/todolist/Todolist.exe
# Example Mac: /Applications/YourApp.app/Contents/MacOS/YourApp
# Example Linux: /usr/bin/your-app
ELECTRON_APP_PATH=C:/path/to/your/electron/app.exe

# Path to Electron driver executable
# Full absolute path to the electrondriver.exe file
# Download from: https://github.com/electron/electron/releases
# Example: D:/Automation/electronDriver/electrondriver.exe
ELECTRON_DRIVER_PATH=C:/path/to/electron/driver/electrondriver.exe

# ============================================
# Database Configuration
# ============================================
# Path to SQLite database file
# Relative to project root
# Example: database/Employees.db
DATABASE_PATH=database/Employees.db

# ============================================
# Reporting Configuration
# ============================================
# Path where screenshots will be saved
# Relative to project root
# Used by Allure reports
SCREENSHOTS_PATH=allure-screen-shots

# Path where Allure test results are stored
# Relative to project root
ALLURE_RESULTS_PATH=allure-results

# Path where Allure HTML reports are generated
# Relative to project root
ALLURE_REPORT_PATH=allure-report

# ============================================
# Test Execution Configuration
# ============================================
# Run browsers in headless mode
# Options: true, false
# true = No visible browser window (faster, good for CI/CD)
# false = Visible browser window (good for debugging)
HEADLESS=true

# Number of parallel workers for test execution
# Requires pytest-xdist: pip install pytest-xdist
# Set to 1 to disable parallel execution
# Recommended: 2-4 for most systems
PARALLEL_WORKERS=2

# Test timeout in seconds
# Tests exceeding this time will be marked as failed
# Recommended: 300-600 seconds (5-10 minutes)
TEST_TIMEOUT=300

# ============================================
# Environment Indicator
# ============================================
# Current environment
# Options: dev, staging, prod
# Used to load environment-specific configurations
ENVIRONMENT=dev

# ============================================
# Optional: Real Credentials (if needed)
# ============================================
# Uncomment and fill these if you add real authentication
# These should NEVER be committed to git!

# Test user credentials
# TEST_USERNAME=your_test_username
# TEST_PASSWORD=your_test_password

# Database credentials (if using remote database)
# DB_USERNAME=db_user
# DB_PASSWORD=db_password
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=test_database

# Cloud service credentials (BrowserStack, Sauce Labs, etc.)
# CLOUD_USERNAME=your_cloud_username
# CLOUD_ACCESS_KEY=your_cloud_access_key
# CLOUD_URL=https://hub.browserstack.com/wd/hub
